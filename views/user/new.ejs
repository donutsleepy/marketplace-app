<%- include('../partials/header.ejs') %>

<div class="signup-container">
    <div class="form-header">
        <div class="title">
            <div class="title-content">Signup</div>
        </div>
    </div>
    <form action="/users" method="POST" class="signup-form">
        <div class="input-group">
            <input type="text" id="firstName" name="firstName" class="input-field" required>
            <label for="firstName">First Name</label>
        </div>
        <div class="input-group">
            <input type="text" id="lastName" name="lastName" class="input-field" required>
            <label for="lastName">Last Name</label>
        </div>
        <div class="input-group">
            <input type="email" id="email" name="email" class="input-field" required>
            <label for="email">Email</label>
        </div>
        <div class="input-group">
            <input type="password" id="password" name="password" class="input-field" required>
            <label for="password">Password</label>
        </div>
        <button name="signup" type="submit" class="submit-btn">Signup</button>
        <div class="switch-form">
            <p>Already have an account? <a href="./login">Login</a></p>
        </div>
    </form>
</div>


<%- include('../partials/footer.ejs') %>